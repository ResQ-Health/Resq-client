{
  "firestore": {
    "rules": "firebase-security-rules/firestore.rules",
    "indexes": "firebase-security-rules/firestore.indexes.json"
  },
  "storage": {
    "rules": "firebase-security-rules/storage.rules"
  },
  "database": {
    "rules": "firebase-security-rules/realtime-database.rules.json"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}

