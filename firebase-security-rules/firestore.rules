rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is the owner of a document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if user is a patient
    function isPatient() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.user_type == 'Patient';
    }
    
    // Helper function to check if user is a provider
    function isProvider() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.user_type == 'Provider';
    }
    
    // Users collection - users can only read/update their own data
    match /users/{userId} {
      // Users can read their own profile
      allow read: if isOwner(userId);
      
      // Users can create their own profile during registration
      allow create: if isAuthenticated() && request.auth.uid == userId;
      
      // Users can update their own profile
      allow update: if isOwner(userId) && 
                       request.resource.data.user_type == resource.data.user_type; // Prevent changing user_type
      
      // Users cannot delete their own profile (admin only)
      allow delete: if false;
    }
    
    // Patient profiles collection
    match /patients/{patientId} {
      // Patients can read/update their own profile
      allow read, update: if isAuthenticated() && request.auth.uid == patientId;
      
      // Patients can create their own profile
      allow create: if isAuthenticated() && request.auth.uid == patientId;
      
      // Providers can read patient profiles (for booking purposes)
      allow read: if isProvider();
      
      // No deletion allowed
      allow delete: if false;
    }
    
    // Provider profiles collection
    match /providers/{providerId} {
      // Providers can read/update their own profile
      allow read, update: if isAuthenticated() && request.auth.uid == providerId;
      
      // Providers can create their own profile
      allow create: if isAuthenticated() && request.auth.uid == providerId;
      
      // Patients can read provider profiles (for browsing)
      allow read: if isAuthenticated();
      
      // No deletion allowed
      allow delete: if false;
    }
    
    // Appointments collection
    match /appointments/{appointmentId} {
      // Patients can read their own appointments
      allow read: if isAuthenticated() && 
                     (resource.data.patient_id == request.auth.uid || 
                      resource.data.provider_id == request.auth.uid);
      
      // Patients can create appointments
      allow create: if isPatient() && 
                       request.resource.data.patient_id == request.auth.uid;
      
      // Patients and providers can update their own appointments
      allow update: if isAuthenticated() && 
                       (resource.data.patient_id == request.auth.uid || 
                        resource.data.provider_id == request.auth.uid);
      
      // Only patients can cancel their appointments
      allow delete: if isPatient() && resource.data.patient_id == request.auth.uid;
    }
    
    // Reviews collection
    match /reviews/{reviewId} {
      // Anyone authenticated can read reviews
      allow read: if isAuthenticated();
      
      // Patients can create reviews
      allow create: if isPatient() && 
                       request.resource.data.patient_id == request.auth.uid;
      
      // Patients can update their own reviews
      allow update: if isPatient() && resource.data.patient_id == request.auth.uid;
      
      // Patients can delete their own reviews
      allow delete: if isPatient() && resource.data.patient_id == request.auth.uid;
    }
    
    // Messages/Conversations collection (if using Firestore for chat)
    match /conversations/{conversationId} {
      // Users can read conversations they're part of
      allow read: if isAuthenticated() && 
                     (resource.data.participants[request.auth.uid] != null);
      
      // Users can create conversations
      allow create: if isAuthenticated() && 
                       request.auth.uid in request.resource.data.participants;
      
      // Users can update conversations they're part of
      allow update: if isAuthenticated() && 
                       request.auth.uid in resource.data.participants;
      
      // Users can delete conversations they're part of
      allow delete: if isAuthenticated() && 
                       request.auth.uid in resource.data.participants;
    }
    
    // Messages subcollection
    match /conversations/{conversationId}/messages/{messageId} {
      // Users can read messages in conversations they're part of
      allow read: if isAuthenticated() && 
                     get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants[request.auth.uid] != null;
      
      // Users can create messages in conversations they're part of
      allow create: if isAuthenticated() && 
                       request.resource.data.sender_id == request.auth.uid &&
                       get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants[request.auth.uid] != null;
      
      // Users can update their own messages
      allow update: if isAuthenticated() && resource.data.sender_id == request.auth.uid;
      
      // Users can delete their own messages
      allow delete: if isAuthenticated() && resource.data.sender_id == request.auth.uid;
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

